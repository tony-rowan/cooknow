<div class="fixed z-10 py-6 bg-gradient-to-l from-blue-900 to-sky-900 w-full shadow-lg">
  <div class="flex items-center max-w-screen-lg mx-auto px-4 lg:px-0">
    <%= link_to "Cooknow", root_path, class: "text-3xl font-semibold text-white" %>

    <div class="flex-grow"></div>

    <%= button_to :search,
      method: :delete,
      class: "flex items-center gap-2 mx-auto px-8 py-4 bg-sky-500 hover:bg-blue-600 text-white rounded shadow" do %>
      <%= inline_svg_tag "icons/restart.svg", class: "w-6 h-6" %>
      <span>Start Over</span>
    <% end %>
  </div>
</div>
